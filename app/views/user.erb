<h2><%= @user.name %>
<% if current_user.id != @user.id && !current_user.followed_users.include?(@user) %>
  <form action="/users/follow" method="POST" id="follow-btn">
    <input type="hidden" name="follower_id" value="<%= current_user.id %>">
    <input type="hidden" name="following_id" value="<%= @user.id %>">
    <input class="btn btn-primary btn-sm" type="submit" value="Follow">
  </form>
<% end %></h2>

<h3>Tweets</h3>
<% @tweets.each do |tweet| %>
  <p><%= tweet.status %></p>
<% end %>

<% if signed_in? && current_user.id == @user.id %>
  <h3>Add a tweet</h3>
  <form action="/tweets" method="POST">
    <p><textarea rows="4" cols="50" name="status"></textarea></p>
    <input type="hidden" name="user_id" value="<%= @user.id %>">
    <input class="btn btn-primary" type="submit">
  </form>
<% end %>

<h3>Following</h3>
<% @followings.each do |following| %>
  <p><a href="/users/<%= following.id %>"><%= following.name %></a></p>
<% end %>

<h3>Followers</h3>
<% @followers.each do |follower| %>
  <p><a href="/users/<%= follower.id %>"><%= follower.name %></a></p>
<% end %>
